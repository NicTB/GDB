<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filtre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nicta.gdb.FiltreActivity">

    <TextView
        android:text="Filtres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:textSize="24sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinTags"
        android:layout_below="@+id/spinFaction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:layout_alignRight="@+id/spinFaction"
        android:layout_alignEnd="@+id/spinFaction" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/spinFaction"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <CheckBox
        android:text="Bronze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBronze"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_alignRight="@+id/checkNeutre"
        android:layout_alignEnd="@+id/checkNeutre" />

    <CheckBox
        android:text="Gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkGold"
        android:layout_below="@+id/checkSilver"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/checkBronze"
        android:layout_alignEnd="@+id/checkBronze" />

    <CheckBox
        android:text="Leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkLeader"
        android:layout_below="@+id/checkSilver"
        android:layout_alignLeft="@+id/checkSilver"
        android:layout_alignStart="@+id/checkSilver" />

    <CheckBox
        android:text="Silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkSilver"
        android:layout_alignBaseline="@+id/checkBronze"
        android:layout_alignBottom="@+id/checkBronze"
        android:layout_alignRight="@+id/spinTags"
        android:layout_alignEnd="@+id/spinTags" />

    <CheckBox
        android:text="Legendary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkLegendary"
        android:layout_below="@+id/checkCommon"
        android:layout_alignLeft="@+id/checkLeader"
        android:layout_alignStart="@+id/checkLeader" />

    <CheckBox
        android:text="Rare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkRare"
        android:layout_above="@+id/checkLegendary"
        android:layout_alignLeft="@+id/checkLegendary"
        android:layout_alignStart="@+id/checkLegendary" />

    <TextView
        android:text="RaretÃ© des cartes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/checkGold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Epic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkEpic"
        android:layout_below="@+id/checkCommon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/checkCommon"
        android:layout_alignEnd="@+id/checkCommon" />

    <Button
        android:text="Filtrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirmerFiltre"
        android:textSize="18sp"
        android:layout_below="@+id/checkLegendary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="Type de cartes :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/spinTags"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkCommon"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
